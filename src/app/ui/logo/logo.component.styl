:host
    display: flex;
    padding: 0 20px;
    &:hover
        background-color: #3458a7;
    &:active
        background-color: #15306b;
	& .logo
		display: flex;
		align-items: center;
		color: #fff;
		text-decoration: none;
		transition: background-color 0.3s ease;
		&__image
			font-size: 23px;
			font-weight: 100;
			margin: 0 5px 0 0;
		&__version
			font-size: 8px;
			font-weight: 100;
			border: 1px solid #fff;
			padding: 2px 4px;
			border-radius: 4px;
			position: relative;
			top: -6px;