@import "../../../../assets/stylus/export.styl"

:host
	position: relative;
	& aside
		box-shadow(shadow.normal);
		transition(margin 0.3s ease);
		background-color: color.blue.normal;
		border-right: border.white.solid;
		color: color.white;
		position: relative;
		left: 0;
		height: 100%;
		width: 249px;
		display: flex;
		&.closed
			margin-left: -225px;
			& .close 
				transform: rotate(180deg);
	& .container
		display: flex;
		width: 100%;
		overflow-x: hidden;
	& .content
		flex: 1 0 85%;
		overflow-x: hidden;
	& .title
		padding: 20px 0;
		text-align: center;
		font-weight: 100;
		font-size: 20px;
	& .projects
		display: flex;
		flex-direction: column-reverse;
		& .project
			box-shadow(shadow.normal);
			transition(background-color 0.3s ease);
			color: color.white;
			font-size: font.small;
			background-color: color.blue.normal;
			display: flex;
			padding: 20px;
			cursor: pointer;
			font-weight: 100;
			justify-content: flex-start;
			user-select: none;
			outline: none;	
			position: relative;
			&:hover
				background-color: color.blue.hover;
				z-index: 1;
			&:active
				background-color: color.blue.active;	
				z-index: 1;
			&.selected
				background-color: color.blue.active;	
				z-index: 1;
			&__info
				display: flex;
				justify-content: space-between;
				flex: 1;
				padding: 0 0 0 10px;
			&__pages
				display: inline-flex;
				justify-content: space-between;
				&_count
					display: inline-block;
					padding-left: 5px;
			&__delete
				transition(transitions.normal);
				background-color: color.red.normal;
				font-size: font.big;
				position: absolute;
				left: 0;
				top: 0;
				height: 100%;
				display: flex;
				justify-content: center;
				align-items: center;
				width: 8px;
				cursor: pointer;
				&_icon 
					transition(transitions.normal);
					transform: scale(0);
				&:hover
					background-color: color.red.hover;
					width: 33px;
					& .project__delete_icon 
						transform: scale(1);
				&:active
					background-color: color.red.active;
		& .create
			order: -1;
			&__icon
				@extend .icon-blue
				margin: 20px auto 20px auto;
	& .close
		box-shadow(shadow.normal);
		transition(transitions.normal);
		color: color.white;
		width: 25px;
		display: flex;
		align-items: center;
		justify-content: center;
		cursor: pointer;
		z-index: 2;
		&:hover
			background-color: color.blue.hover;
		&:active
			background-color: color.blue.active;
		&__icon
			font-size: font.big;