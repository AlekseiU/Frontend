@import "../../../../assets/stylus/export.styl"

@keyframes collapse
	from
		max-width: 100%;
		max-height: 100%;
	to
		max-width: 50px;
		max-height: 50px;
		
@keyframes connection
	from
		stroke-dashoffset: 0;
	to
		stroke-dashoffset: 1000;

:host
	width: 100%;
	display: flex;
	position: relative;
	overflow: hidden;
	& .container
		display: flex;
		flex-direction: column;
		height: 100%;
		flex: 1 0 100%;
		cursor: grab;
		cursor: -webkit-grab;
		&:active
			cursor: grabbing;
			cursor: -webkit-grabbing;
	& .name
		box-shadow(shadow.normal);
		background-color: color.blue.normal;
		border-bottom: border.white.solid;
		position: absolute;
		width: 100%;
		z-index: 10;
		&__input
			color: color.white;
			font-size: font.extra-big;
			display: block;
			width: 100%;
			border: 0;
			margin: 0;
			background-color: transparent;
			text-align: center;
			padding: 20px 0;
			font-weight: 100;
			&::placeholder
				opacity: 1;
				color: color.white;
	& .dataList
		align-items: center;
		justify-content: center;
		display: flex;
		flex: 1;
		position: relative;
		& .container
			opacity: 0;
			z-index: -1;
			transition: opacity 0.3s ease-in;		
			&.visible
				z-index: 0;
				opacity: 1;
			&.fullScreen
				z-index: 30;
		& .connection
			overflow: visible;
			&__line
				stroke: color.blue.normal;
				stroke-width: 2;
				stroke-dasharray: 1% 1%;
				stroke-dashoffset: 0;
				animation: connection 40s linear infinite;
	& .createData
		display: flex;
		align-items: center;
		justify-content: center;
		height: 100%;
		flex: 1;
		max-width: 100%;
		max-height: 100%;
		position: absolute;
		z-index: 20;
		width: 100%;
		&__icon
			@extend .icon-blue;
			@extend .icon-big;
		&.collapsed
			max-width: icon.normal.width;
			max-height: icon.normal.height;
			animation-name: collapse;
			animation-duration: 0.3s;
			animation-timing-function: ease;
			left: 10px;
			top: 7px;
			z-index: 50;
			& .createData__icon
				width: icon.normal.width;
				height: icon.normal.height;
				line-height: 50px;
				font-size: 30px;
				margin-top: 0px;			
	& .canvas
		display: flex;
		height: 100%;
		width: 100%;
	& range
		position: absolute;
		right: -50px;