@import "../../../../assets/stylus/export.styl"

@keyframes dataOpen
	0%
		border-radius(radius.round);
		border: border.white.solid;
		width: data.normal.width;
		height: data.normal.height;
	100%
		border-radius(radius.normal);
		width: 80%;
		height: 90%;
		top: 5%;
		left: 10%;

:host
	box-shadow(shadow.normal);
	border-radius(radius.round);
	border: border.white.solid;
	width: data.normal.width;
	height: data.normal.height;
	display: block;
	position: absolute;
	&.fullScreen
		transform(scale(1));
		animation: dataOpen 0.3s ease forwards;
		overflow-y: auto;
		z-index: 999 !important;
		& .backdrop
			border-radius(0);
			opacity: 0;
			z-index: 0;
		& .content 
			width: 100%;
			height: auto;
			cursor: default;
			padding: 65px 0 100px;
			min-height: calc(100% - 65px - 100px);
		& .data__controls
			display: none;
	&.grabbing
		& .backdrop
			cursor: grabbing;
			cursor: -webkit-grabbing;
	& .backdrop
		transition(transitions.slow);
		border-radius(radius.round);
		background-color: color.blue.normal;
		color: color.white;
		display: flex;
		width: 100%;
		align-items: center;
		justify-content: center;
		cursor: pointer;
		position: absolute;
		height: 100%;
		opacity: 1;
		user-select: none;
		z-index: 3;
		&__name
			font-size: font.small;
			font-weight: 300;
			text-align: center;
			text-overflow: clip;
			overflow-x: hidden;
			overflow-y: hidden;
			max-width: 65px;
			max-height: 65px;
			line-height: 1.3;
		&:hover
			background-color: color.blue.hover;
		&:focus
		&:active
			background-color: color.blue.active;
	& .data__controls
		& .icon 
			box-shadow(shadow.normal);
			border-radius(radius.round);
			transition(transitions.normal);
			background-color: color.blue.normal;
			border: border.white.solid;
			width: 18px;
			height: 18px;
			text-align: center;
			line-height: 16px;
			transform: scale(0);
			cursor: pointer;
			z-index: 5;
			&:hover
				background-color: color.blue.hover;
			&:active
				background-color: color.blue.active;
			& i
				font-size: font.small;
				color: color.white;
		& .breakConnection
			position: absolute;
			top: -10px;
			left: calc(50% - 10px);
		& .deleteData
			background: color.red.normal;
			position: absolute;
			bottom: 0px;
			left: calc(50% - 40px);				
			&:hover
				background-color: color.red.hover;
			&:active
				background-color: color.red.active;
		& .addChild
			position: absolute;
			left: calc(50% - 10px);
			bottom: -10px;
		& .selectParent
			position: absolute;
			bottom: 0px;
			left: calc(50% + 20px);
		& .parentList
			box-shadow(shadow.normal);
			border-radius(radius.normal);
			transition(transform 0.3s ease);
			background-color: color.blue.normal;
			border: border.white.solid;
			color: color.white;
			font-size: font.small;
			display: flex;
			flex-wrap: wrap;
			justify-content: space-between;
			padding: 0;
			font-weight: 100;
			width: 100px;
			z-index: 10;
			right: -33px;
			transform: scale(0);
			position: absolute;
			bottom: -55px;
			flex-direction: column;			
			&.visible
				transform: scale(1); 
			&:after
			&:before
				bottom: 100%;
				right: calc(50% - 6px);
				border: solid transparent;
				content: '';
				height: 0;
				width: 0;
				position: absolute;
				pointer-events: none;
				transform: rotate(180deg);
			&:after
				border-color: rgba(136,183,213,0);
				border-top-color: #1f408a;
				border-width: 7px;
				margin-right: 1px;
			&:before
				border-color: rgba(194,225,245,0);
				border-top-color: #fff;
				border-width: 8px;
				margin-left: -8px;
			& span 
				font-size: 11px;
				font-weight: 100;
				text-align: center;
				padding: 5px 0;
			& select 
				border-radius(radius.normal);
				border: border.white.solid;
				font-size: font.small;
				display: block;
				font-weight: 100;
				margin: 0 5px 5px;
				width: calc(100% - 10px);
				height: 20px;
	& .line 
		display: block;
	& .content 
		display: block;
		height: 0;
		width: 0;
		overflow: hidden;
		position: relative;
		background-color: rgba(255,255,255,0.9);
		&__name
			display: block;
			background-color: #1f408a;
			box-shadow: 0px 0px 15px #000;
			border-bottom: 1px solid #fff;
			z-index: 1;
			position: absolute;
			width: 100%;
			top: 0;
			&_input
				display: block;
				width: 100%;
				border: 0;
				margin: 0;
				background-color: transparent;
				padding: 20px 0;
				font-size: 20px;
				color: #fff;
				font-weight: 100;
				text-align: center;
				&::placeholder
					opacity: 1;
					color: #333;
		&__approve
		&__declane
			position: absolute;
			top: 6px;
			cursor: pointer;
			z-index: 2;
			&_icon
				background-color: #1f408a;
				box-shadow: 0px 0px 15px #000;
				border: 1px solid #fff;
				color: #fff;
				border-radius: 50%;
				width: 50px;
				height: 50px;
				text-align: center;
				line-height: 50px;
				font-size: 30px;
				transition: background-color 0.3s ease;
				&:hover
					background-color: #3458a7;
				&:active
					background-color: #15306b;
		&__approve
			right: 10px;
		&__declane
			left: 10px;
		&__controls
			width: calc(100% - 20px);
			text-align: center;
			padding: 12px 10px;
			position: absolute;
			bottom: 0;
			background-color: #1f408a;
			display: flex;
			justify-content: space-between;
			align-items: center;
			box-shadow: 0px 0px 15px #000;
			&_create
				&_icon
					cursor: pointer;
					background-color: #1f408a;
					box-shadow: 0px 0px 15px #000;
					border: 1px solid #fff;
					color: #fff;
					border-radius: 50%;
					width: 50px;
					height: 50px;
					text-align: center;
					line-height: 50px;
					font-size: 30px;
					transition: all 0.3s ease;
					&:hover
						background-color: #3458a7;
					&:active
						background-color: #15306b;	
			&_delete
				&_icon
					cursor: pointer;
					box-shadow: 0px 0px 15px #000;
					border: 1px solid #fff;
					color: #fff;
					border-radius: 50%;
					width: 50px;
					height: 50px;
					text-align: center;
					line-height: 50px;
					font-size: 30px;
					transition: all 0.3s ease;
					background: #BD001C;
					&:hover
						background-color: #d71733;
						z-index: 1;
					&:active
						background-color: #b20821;
			&_parent
				&_icon
					cursor: pointer;
					background-color: #1f408a;
					box-shadow: 0px 0px 15px #000;
					border: 1px solid #fff;
					color: #fff;
					border-radius: 50%;
					width: 50px;
					height: 50px;
					text-align: center;
					line-height: 50px;
					font-size: 30px;
					transition: all 0.3s ease;
					&:hover
						background-color: #3458a7;
					&:active
						background-color: #15306b;	
				&_list
					display: flex;
					flex-wrap: wrap;
					justify-content: space-between;
					position: absolute;
					bottom: 80px;
					z-index: 1;
					background-color: #1f408a;
					box-shadow: 0px 0px 15px #000;
					border: 1px solid #fff;
					color: #fff;
					border-radius: 4px;
					padding: 0;
					font-size: 12px;
					font-weight: 100;
					width: 260px;
					transform: scale(0);
					transition: transform 0.3s ease;
					position: absolute;
					right: 10px;
					flex-direction: column;
					&.visible
						transform: scale(1);
					&:after
					&:before
						top: 100%;
						right: 15px;
						border: solid transparent;
						content: '';
						height: 0;
						width: 0;
						position: absolute;
						pointer-events: none;
					&:after
						border-color: rgba(136,183,213,0);
						border-top-color: #1f408a;
						border-width: 10px;
						margin-right: 1px;
					&:before
						border-color: rgba(194,225,245,0);
						border-top-color: #fff;
						border-width: 11px;
						margin-left: -11px;
					& span 
						font-size: 16px;
						font-weight: 100;
						padding: 10px 0;
					& input 
					& select
						border: 1px solid #1f408a;
						border-radius: 4px;
						display: block;
						font-family: Roboto;
						font-size: 14px;
						font-weight: 100;
						margin: 0 15px 15px;
					& select
						width: calc(100% - 30px);
						height: 30px;
					& input 
						padding: 8px 10px;
						width: calc(100% - 50px);
	&:hover
		.data__controls
			.icon
				transform: scale(1);
	&:active
		z-index: 0;