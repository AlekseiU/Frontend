@import "../../../../assets/stylus/export.styl"

:host
    & .fieldset__create
        background-color: color.blue.normal;
        width: 100%;
        text-align: center;
        padding: 6px 0;
        position: relative;
        margin: 50px 0 0;
        display: flex;
        justify-content: center;
        &_icon
            @extend .icon-blue;
            @extend .icon-small;
            &.opened
                transform: rotate(45deg);
        &_list
            display: flex;
            flex-wrap: wrap;
            justify-content: space-between;
            position: absolute;
            left: 50%;
            bottom: 55px;
            z-index: 1;
            background-color: color.blue.normal;
            box-shadow: shadow.normal;
            border: border.white.solid;
            color: color.white;
            border-radius: radius.normal;
            padding: 0;
            font-size: font.small;
            font-weight: 100;
            width: 260px;
            margin-left: -130px;
            transform: scale(0);
            transition: transform 0.3s ease;
            &.visible
                transform: scale(1);
            &:after
            &:before
                top: 100%;
                left: 50%;
                border: solid transparent;
                content: '';
                height: 0;
                width: 0;
                position: absolute;
                pointer-events: none;
            &:after
                border-color: rgba(136,183,213,0);
                border-top-color: color.blue.normal;
                border-width: 10px;
                margin-left: -10px;
            &:before
                border-color: rgba(194,225,245,0);
                border-top-color: color.white;
                border-width: 11px;
                margin-left: -11px;
            & .item 
                display: block;
                width: calc(30% - 10px);
                padding: 10px 5px;
                border-radius: radius.normal;
                cursor: pointer;
                transition: background-color 0.3s ease;
                &__name
                    display: block;
                    cursor: pointer;
                    padding: 4px 0px;
                    transition: background-color 0.3s ease;
                & i 
                    font-size: 25px;
                    margin: 0 0 5px;
                & span 
                    font-size: 10px;
                &:hover
                    background-color: color.blue.hover;
                &:active
                    background-color: color.blue.active;
    & .fieldset__delete
        text-align: center;
        padding: 6px;
        position: absolute;
        bottom: 0;
        left: 0;
        &_icon
            @extend .icon-red;
            @extend .icon-small;
    & .data
        display: block;
    & .fieldset
        margin: 20px 20px 30px;
        border: border.white.solid;
        border-radius: radius.normal;
        box-shadow: shadow.normal;
        outline: none;
        position: relative;
        overflow: hidden;
        &:after
            content: '';
            border-bottom: border.blue.dashed;
            width: 100%;
            height: 1px;
            display: block;
            position: absolute;
            left: 0px;
            margin-top: 15px;
        &:last-child:after
            display: none;
        &__order
            @extend .icon-blue;
            @extend .icon-small;
            position: absolute;
            left: 7px;
            top: 7px;
            flex-direction: column;
            align-items: stretch;
            text-align: center;
            overflow: hidden;
            &:hover,
            &:active
                background-color: color.blue.normal;
            &_up
                transition: transitions.normal;
                display: flex;
                align-items: flex-start;
                justify-content: center;
                &:hover
                    background-color: color.blue.hover;
                &:active
                    background-color: color.blue.active; 
            &_down
                transition: transitions.normal;
                display: flex;
                align-items: flex-end;
                justify-content: center;
                &:hover
                    background-color: color.blue.hover;
                &:active
                    background-color: color.blue.active;
        &__name
            background-color: color.blue.normal;
            position: relative;
            outline: none;
            &_input
                margin: 0;
                padding: 0;
                border: 0;
                font-size: font.normal;
                font-weight: 100;
                background: transparent;
                color: color.white;
                width: 100%;
                text-align: center;
                padding: 15px 0;
                &::-webkit-input-placeholder
                    color: color.white;
            &::-webkit-details-marker
                display: none;
            &_toggle
                @extend .icon-blue;
                @extend .icon-small;
                position: absolute;
                right: 7px;
                top: 7px;
        &[open]
            border: border.blue.solid;
            overflow: visible;
            & .fieldset__name_toggle
                transform: scale(1, -1);