:host
	font-size: 0;
	flex: 1;
	& .empty
		position: relative;
		display: flex;
		align-items: center;
		justify-content: center;
		flex-direction: column;
		padding: 20px 0;
		flex: 1;
		& i 
			font-size: 80px;
			color: #1f408a;
			transition: color 0.3s ease;
		& span
			font-size: 14px;
			font-weight: 100;
			text-align: center;
			display: block;
			margin: 3px 0 0;
		& input 
			position: absolute;
			left: 0;
			top: 0;
			width: 100%;
			height: 100%;
			opacity: 0;
			cursor: pointer;
		&:hover
			& i 
				color: #3458a7;
		&:active
			& i 
				color: #15306b;		
	& textarea
		width: calc(100% - 30px) !important;
		border: 1px solid #1f408a;
		border-left: 0;
		padding: 15px;
		font-family: Roboto;
		font-size: 14px;
		font-weight: 300;
		color: #333;
		border-radius: 0 4px 4px 0;
		outline: none;
		min-height: 80px;
	& img 
		width: calc(100% - 25px);
		height: 100%;
		border-radius: 4px;
	& .image__change
		position: absolute;
		right: 7px;
		top: 7px;
		font-size: 30px;
		background-color: #1f408a;
		box-shadow: 0px 0px 15px #000;
		border: 1px solid #fff;
		color: #fff;
		border-radius: 50%;
		width: 60px;
		height: 60px;
		text-align: center;
		line-height: 60px;
		cursor: pointer;
		transition: all 0.3s ease;
		&:hover
			background-color: #3458a7;
		&:active
			background-color: #15306b;
	& input[type="date"]
		border: 1px solid #1f408a;
		border-radius: 4px;
		display: inline-block;
		padding: 8px 10px;
		text-align: center;
		font-family: Roboto;
		font-size: 18px;
		font-weight: 100;
		margin: 0 15px;
	& .date__create
		display: inline-block;
		&_icon 
			cursor: pointer;
			background-color: #1f408a;
			box-shadow: 0px 0px 15px #000;
			border: 1px solid #fff;
			color: #fff;
			border-radius: 50%;
			width: 30px;
			height: 30px;
			text-align: center;
			line-height: 31px;
			font-size: 17px;
			transition: all 0.3s ease;
			&:hover
				background-color: #3458a7;
			&:active
				background-color: #15306b;
	& input[type="url"]
		border: 1px solid #1f408a;
		border-radius: 0 4px 0px 0;
		display: block;
		padding: 8px 10px;
		text-align: center;
		font-family: Roboto;
		font-size: 14px;
		font-weight: 300;
		width: calc(100% - 21px);
		flex: 1 0 94%;
		border-left: 0;				
	& .url__screenshot
		flex: 1 0 99%;
		border: 1px solid #1f408a;
		border-top: 0;
		border-radius: 0 0 4px 4px;
	& video
		width: 100%;
	& .video__change
		position: absolute;
		right: 7px;
		top: 7px;
		font-size: 30px;
		background-color: #1f408a;
