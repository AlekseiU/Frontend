@import "../../../assets/stylus/export.styl"

:host
	box-shadow(shadow.normal);
	transition(bottom 0.3s ease);
	background-color: color.blue.normal;
	border-top: border.white.solid;
	color: color.white;
	z-index: 50;
	user-select: none;
	cursor: default;
	position: fixed;
	width: 100%;
	bottom: -50%;
	height: 50%;
	&.visible
		bottom: 0;
	& .marker
		box-shadow(shadow.normal);
		border-radius(radius.normal-bottom);
		position: absolute;
		top: -32px;
		left: calc(50% - 52px);
		background-color: color.blue.normal;
		border: border.white.solid;
		border-bottom: 0;
		width: 100px;
		height: 30px;
		display: flex;
		flex-direction: column;
		justify-content: center;
		align-items: center;
		cursor: pointer;
		& i 
			transition(transitions.normal);
			font-size: 0px;
			position: absolute;
			line-height: 15px;
		& span
			font-size: font.normal;
			font-weight: 100;
			transition: font-size 0.3s ease;
		&.close
			& i
				font-size: font.icon;
				transform: scale(1, -1);
			& span
				font-size: 0px;
		&:hover
			background-color: color.blue.hover;
			& i 
				font-size: 30px;
			& span
				font-size: 0px;
		&:active
			background-color: color.blue.active;
	& .container
		display: flex;
		flex-direction: column;
		justify-content: space-between;
		height: 100%;
	& .copyright
		text-align: center;
		margin: 0;
		font-size: font.normal;
		padding: 10px 0 5px;
		transition: margin 0.3s ease;
		&__sign
			font-weight: 100;
			font-size: 10px;
			position: relative;
			top: -6px;
		&__project
			font-weight: 100;
	& .time
		display: block;
		text-align: center;
		font-size: 0px;
		font-weight: 100;
		transition: font-size 0.3s ease;
	& .title
		display: block;
		font-weight: 100;
		text-align: center;
		padding: 15px 0;
	& .index 
		display: flex;
		justify-content: space-between;
		flex-wrap: wrap;
		overflow-y: auto;
		border-top: 1px solid #fff;
		border-bottom: 1px solid #fff;
		z-index: 1;
		flex: 1;
		& .letter
			padding: 15px 10px;
			width: calc(9% - 20px);
			color: #fff;
			transition: background-color 0.3s ease;
			text-decoration: none;
			display: flex;
			flex-direction: column;
			justify-content: center;
			align-items: center;
			&__label
				color: #fff;
				font-size: 18px;
			&__—Åoncurrences
				display: block;
				& li 
					display: block;
					& span 
						color: #fff;
						font-size: 10px;
						&:before
							content: '-';
							margin: 0 3px 0 0px;
					&:last-child
						& span
							&:before
								display: none;
			&:hover
				background-color: #3458a7;
			&:active
				background-color: #15306b;